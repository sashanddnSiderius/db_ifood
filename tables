create table User (
	id int not null auto_increment primary key,
    date_created varchar(10),
    status int,
    name varchar(50),
    email varchar(50),
    password varchar(30),
    phone varchar(13),
    cpf varchar(11)
);

create table Restaurant (
	id int not null auto_increment primary key,
    date_created varchar(10),
    status int,
    name varchar(50),
    description varchar(100),
    phone varchar(13),
    rate varchar(10),
    cnpj varchar(11),
    id_restaurant_category int
);

create table Restaurant_category (
	id int not null auto_increment primary key,
    data_created varchar(10),
    status int,
    name varchar(50),
    description varchar(100)
);

create table Address (
	id int not null auto_increment primary key,
    date_created varchar(10),
    status int,
    street varchar(30),
    district varchar(30),
    cep varchar(9),
    number varchar(13),
    complement varchar(30),
    id_user int,
    id_restaurant int
);

create table Product (
	id int not null auto_increment primary key,
    date_created varchar(10),
    status int,
    name varchar(50),
    price int,
    description varchar(100),
    id_prduct_category int,
    id_restaurant int
);

create table Product_category (
	id int not null auto_increment primary key,
    data_created varchar(10),
    status int,
    name varchar(50),
    description varchar(100)
);

create table Product_add (
	id int not null auto_increment primary key,
    data_created varchar(10),
    status int,
    name varchar(50),
    description varchar(100),
    price int
);

create table Product_add_registry (
	id_product int,
    id_add int
);

create table Order_history (
	id int not null auto_increment primary key,
    id_order int,
    id_status int
);

create table Ordering (
	id int not null auto_increment primary key,
    delivery_fee int,
    total_price int,
    description varchar(100),
    is_withdraw bool,
    id_address int,
    id_user int,
    id_restaurant int,
    id_cupom int,
    id_status int
);

create table Order_status (
	id int not null auto_increment primary key,
    data_created varchar(10),
    status int,
    name varchar(50),
    description varchar(100)
);

create table Order_production (
	id int not null auto_increment primary key,
    id_order int,
    id_product int
);

create table Order_production_add (
	quantity int,
    id_order_production int,
    id_product_add int
);

create table Business_hours (
	id int not null auto_increment primary key,
    data_created varchar(10),
    status int,
    day varchar(10),
    opening varchar(10),
    closing varchar(10)
);

create table Rating (
	id int not null auto_increment primary key,
    data_created varchar(10),
    status int,
    order_rating int,
    description varchar(100),
    id_order int
);

create table Favorite (
	id int not null auto_increment primary key,
    id_user int,
    id_restaurant int
);

create table Cupom (
	id int not null auto_increment primary key,
    data_created varchar(10),
    status int,
    code varchar(20),
    price int,
    description varchar(100)
);

create table Payment (
	id int not null auto_increment primary key,
    data_created varchar(10),
    status int,
    price int,
    date_hour varchar(10),
    id_order int,
    id_payment_method int,
    id_payment_status int
);

create table Payment_method (
	id int not null auto_increment primary key,
    data_created varchar(10),
    status int,
    name varchar(50),
    description varchar(100)
);

create table Payment_status (
	id int not null auto_increment primary key,
    data_created varchar(10),
    status int,
    name varchar(50),
    description varchar(100)
);
